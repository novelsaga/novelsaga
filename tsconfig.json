{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "out",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", ".vscode-test", "out", "projects/*/src"],
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/*.ts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/.*.ts",
    "**/.*.mts",
    "**/.*.cts",
    "**/.*.ts",
    "**/.*.js",
    "**/.*.cjs",
    "**/.*.mjs"
  ]
}
