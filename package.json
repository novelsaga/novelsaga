{
  "name": "novelsaga",
  "version": "0.1.0",
  "displayName": "NovelSaga Language Server",
  "description": "Language Server for NovelSaga with WASI support",
  "categories": [
    "Programming Languages"
  ],
  "publisher": "novelsaga",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
  "engines": {
    "pnpm": ">=10.0.0",
    "vscode": "^1.106.0"
  },
  "main": "./projects/client/out/extension.cjs",
  "scripts": {
    "build:server": "cargo zigbuild --release",
    "compile": "pnpm --filter client compile && pnpm run build:server",
    "lint": "pnpm --filter client lint",
    "package": "vsce package --no-dependencies",
    "prepare": "husky",
    "test": "pnpm --filter client test",
    "vscode:prepublish": "pnpm run compile",
    "watch": "pnpm --filter client watch"
  },
  "dependencies": {
    "ramda": "^0.32.0",
    "ramda-adjunct": "^5.1.0"
  },
  "devDependencies": {
    "@cspell/cspell-types": "^9.3.2",
    "@cspell/dict-companies": "^3.2.7",
    "@cspell/dict-css": "^4.0.18",
    "@cspell/dict-en_us": "^4.4.24",
    "@cspell/dict-fonts": "^4.0.5",
    "@cspell/dict-html": "^4.0.12",
    "@cspell/dict-node": "^5.0.8",
    "@cspell/dict-npm": "^5.2.22",
    "@cspell/dict-typescript": "^3.2.3",
    "@cspell/eslint-plugin": "^9.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.5",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^24.10.1",
    "@types/ramda": "^0.31.1",
    "@types/regexgen": "^1.3.3",
    "@types/shebang-command": "^1.2.2",
    "@types/vscode": "^1.106.0",
    "commitizen": "^4.3.1",
    "crlf": "^1.1.1",
    "cross-env": "^10.1.0",
    "cspell": "^9.3.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "is-binary-path": "^3.0.0",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.5.0",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-sort-json": "^4.1.1",
    "shebang-command": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "unplugin-parcel-macros": "^0.1.1",
    "yaml": "^2.8.1"
  },
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "NovelSaga",
      "properties": {
        "novelsaga.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  }
}
