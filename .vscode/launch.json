{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "${workspaceFolder}/test-workspace"
      ],
      "outFiles": ["${workspaceFolder}/projects/client/out/**/*.js"],
      "preLaunchTask": "compile"
    },
    {
      "name": "Debug Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentKind=workspace",
        "--disable-extensions",
        "${workspaceFolder}/test-workspace"
      ],
      "outFiles": ["${workspaceFolder}/projects/client/out/**/*.js"],
      "preLaunchTask": "compile",
      "sourceMaps": true
    }
  ]
}
